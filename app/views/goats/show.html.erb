<div class="show-goat-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xl-4 col-lg-4 col-md-6 col-xs-12">
        <div class="card-show">
          <div class="card-show-goat">
            <div class="card-picture">
              <%= cl_image_tag @goat.photo, width: 300, height: 250, crop: :fill, class: 'card-img-top' %>
            </div>
            <div class="card-body">
              <h5 class="daily-price-show"> <span><%= @goat.daily_price %></span> â‚¬/per day</h5>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-8 col-lg-8 col-md-6 col-xs-12">
        <div class="card-show-goat csg-2">
          <div class="card-show-goat-details">
            <%= cl_image_tag @goat.owner.avatar, class: "avatar-bordered-large-owner" %>
            <h2 class="card-title-show"> <%= @goat.name %></h2>
            <p class="card-text-show"><%= @goat.specie.capitalize %> </p>
            <p class="card-text-show card-location-show"><i class="fas fa-map-marker-alt"></i> <%= @goat.address.capitalize %> </p>
            <p class="card-text-description"><%= @goat.description %></p>
            <%= link_to "Book our goat" , new_goat_booking_path(@goat.id), class: "btn-flat btn-goat" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

