<%= simple_form_for @goat, url: my_goats_path do |f|%>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :specie %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :daily_price %>
    <%= f.input :photo %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Add a goat', class: 'btn btn-primary' %>
  </div>
<% end %>
