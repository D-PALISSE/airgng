<div class="wrapper">
    <div class="mygoats-title">
  <!--   <h2>Search results for:</h2>
    <p><strong>Nantes</strong>, from 05/04/2019 to 10/04/2019</p> -->
    <div class="container card-container results"><h2>My goats</h2></div>
    <div class="link-to-new-goat"><%= link_to new_my_goat_path, class: "btn-flat-cheptel" do  %>
      <i class="fas fa-plus"></i>&nbsp Add a new goat
    <% end %>
    </div>
  </div>
  <div class="container card-container">
    <div class="row">
      <% @my_goats.each do |goat| %>
        <%= link_to goat_path(goat), class: "goat-card-cheptel" do %>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
            <div class="my-goats-card">
              <div class="card-picture">
                <%= cl_image_tag goat.photo, width: 300, height: 200, crop: :fill, class: 'card-img-top' %>
              </div>
              <div class="card-body">
                <h5 class="card-title"> <%= goat.name %> </h5>
                <p class="card-text"> <%= goat.specie.capitalize %> </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


